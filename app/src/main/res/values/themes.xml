<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.RestLibrary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/face_light_blue</item>
    <item name="colorPrimaryVariant">@color/face_light_blue</item>
    <item name="colorPrimaryDark">@color/face_light_blue</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/face_light_orange</item>
    <item name="colorSecondaryVariant">@color/face_light_orange</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    <item name="android:textColorPrimary">@color/white</item>

    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.RestLibrary.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.RestLibrary.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.RestLibrary.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>